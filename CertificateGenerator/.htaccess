# Security configuration for CertificateGenerator directory
# Block access to sensitive data files

# Block access to student data CSV file
<Files "student-data.csv">
    Order Deny,Allow
    Deny from all
</Files>

# Block access to admin pages
<Files "admin.html">
    Order Deny,Allow
    Deny from all
</Files>

# Block all CSV files in this directory
<FilesMatch "\.csv$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Allow access to the certificate generator
<Files "certificate-generator.html">
    Order Allow,Deny
    Allow from all
</Files>

# Allow access to CSS and JS assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>