# Security configuration for Apache/Nginx
# Block access to sensitive files and directories

# Block access to CSV files
<FilesMatch "\.csv$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Block access to git files and directories
<FilesMatch "^\.git">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Block access to flag files
<FilesMatch "^flag\.(txt|html)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Block access to admin pages
<FilesMatch "admin\.html$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Block access to sensitive certificate generator data
<Files "student-data.csv">
    Order Deny,Allow
    Deny from all
</Files>

# Prevent directory browsing
Options -Indexes

# Additional security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>